		SouSouTalk.set(11,0,可恶，干掉他们。);
		SouSouSCharacter.changeRect(1,command,0,3,0,14,2);
		SouSouRunMode.set(0);
		Var.set(atBelongCoordinates1,1);
	endif;
endfunction;
